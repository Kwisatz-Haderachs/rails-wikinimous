<h1>Articles</h1>

<% @articles.each do |a| %>
<h3><%= a.title %></h3>
<p><%= a.content %></p>
<p><%= link_to "More Details", article_path(a) %></p>
<p><%= link_to "Edit Details", edit_article_path(a) %></p>
<p><%= link_to "Delete", article_path(a), method: :delete, data: {confirm: "You sure about this?"} %></p>
<% end %>

 <h4> <%= link_to "New Article", new_article_path %></h4>
